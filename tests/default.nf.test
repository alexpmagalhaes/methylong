nextflow_pipeline {

    name "Test pipeline"
    script "../main.nf"
    tag "pipeline"
    tag "pipeline_methylong"

    def test_scenario = [
        [
            name: "-profile test",
            params: [
                input       : "https://raw.githubusercontent.com/nf-core/test-datasets/refs/heads/methylong/v2.0.0/test_data/test_samplesheet.csv",
                ont_aligner : "minimap2"
            ]
        ],
    ]

    // Generate tests for each scenario
    test_scenario.each { scenario ->
        test(scenario.name, UTILS.get_test(scenario))
    }
}
